{
  "name": "NTS Radio - Favorites",
  "short_name": "NTS Favorites",
  "description": "Save your favorite NTS Radio shows & episodes",
  "version": "0.3.0",
  "default_locale": "en",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "activeTab",
    "downloads",
    "https://*.nts.live/*"
  ],
  "icons": {
    "48": "icons/nts-favorites-icon-white@48.png",
    "128": "icons/nts-favorites-icon-white@128.png",
    "256": "icons/nts-favorites-icon-white@256.png"
  },
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_title": "NTS Favorites"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
